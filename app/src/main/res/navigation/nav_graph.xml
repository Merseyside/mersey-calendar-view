<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.merseyside.calendar.sample.application.main.fragment.view.MainFragment"
        android:label="main_fragment"
        tools:layout="@layout/fragment_main"
        app:navGraph="@navigation/nav_graph">

        <action
            android:id="@+id/action_mainFragment_to_calendarFragment"
            app:destination="@id/calendarFragment" />

        <action
            android:id="@+id/action_mainFragment_to_motionFragment"
            app:destination="@id/weekMonthMotionFragment" />

    </fragment>

    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.merseyside.calendar.sample.simple.view.CalendarFragment"
        android:label="calendar_fragment"
        tools:layout="@layout/fragment_calendar"
        app:navGraph="@navigation/nav_graph" />

    <fragment
        android:id="@+id/weekMonthMotionFragment"
        android:name="com.merseyside.calendar.sample.motionWeekMonth.MotionMonthWeekMotionFragment"
        android:label="motion_fragment"
        tools:layout="@layout/fragment_motion"
        app:navGraph="@navigation/nav_graph" />

</navigation>