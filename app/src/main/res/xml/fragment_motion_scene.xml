<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        motion:motionInterpolator="linear">

        <OnSwipe
            motion:dragDirection="dragDown"
            motion:touchAnchorId="@id/drag_view"
            motion:touchAnchorSide="bottom" />

        <KeyFrameSet>

            <KeyAttribute
                android:alpha="0"
                motion:framePosition="30"
                motion:motionTarget="@id/week_view_container" />

            <KeyAttribute
                android:alpha="1"
                motion:framePosition="70"
                motion:motionTarget="@id/month_view_container" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/calendar_container"
            android:layout_width="0dp"
            android:layout_height="@dimen/calendar_container_size"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint android:id="@id/month_view_container"
            android:layout_width="0dp"
            android:layout_height="@dimen/calendar_container_expanded_size"
            motion:layout_constraintBottom_toTopOf="@id/calendar_container"
            motion:layout_constraintStart_toStartOf="@id/calendar_container"
            motion:layout_constraintEnd_toEndOf="@id/calendar_container">

            <PropertySet android:alpha="0" />
        </Constraint>

        <Constraint android:id="@id/week_view_container"
            android:layout_width="0dp"
            android:layout_height="@dimen/calendar_container_size"
            motion:layout_constraintTop_toTopOf="@id/calendar_container"
            motion:layout_constraintStart_toStartOf="@id/calendar_container"
            motion:layout_constraintEnd_toEndOf="@id/calendar_container">

            <PropertySet android:alpha="1" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/calendar_container"
            android:layout_width="0dp"
            android:layout_height="@dimen/calendar_container_expanded_size"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint android:id="@id/month_view_container"
            android:layout_width="0dp"
            android:layout_height="@dimen/calendar_container_expanded_size"
            motion:layout_constraintTop_toTopOf="@id/calendar_container"
            motion:layout_constraintStart_toStartOf="@id/calendar_container"
            motion:layout_constraintEnd_toEndOf="@id/calendar_container"
            motion:layout_constraintBottom_toBottomOf="@id/calendar_container">
            <PropertySet android:alpha="1" />

        </Constraint>

        <Constraint android:id="@id/week_view_container"
            android:layout_width="0dp"
            android:layout_height="@dimen/calendar_container_size"
            motion:layout_constraintTop_toBottomOf="@id/drag_view"
            motion:layout_constraintStart_toStartOf="@id/calendar_container"
            motion:layout_constraintEnd_toEndOf="@id/calendar_container">
            <PropertySet android:alpha="0" />

        </Constraint>
    </ConstraintSet>

</MotionScene>
