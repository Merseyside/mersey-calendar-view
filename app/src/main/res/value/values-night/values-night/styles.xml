<resources>

    <!-- Dark application theme. -->
    <style name="Theme.Sample.Base" parent="Theme.MaterialComponents.NoActionBar">

        <item name="colorAccent">@color/blue_primary</item>

        <item name="colorPrimary">@color/night</item>
        <item name="colorPrimaryDark">@color/night_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/blue_primary</item>
        <item name="colorSecondaryVariant">@color/blue_primary_variant</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorError">@color/pink</item>
        <item name="colorOnError">@color/white</item>

        <item name="colorSurface">@color/night</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="android:colorBackground">@color/night</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/grey_dark</item>

        <item name="valueSwitcherStyle">@style/Widget.Mersey.ValueSwitcher</item>

        <item name="numberDayViewStyle">@style/Widget.Mersey.CalendarItemView.Circle</item>
        <item name="weekDayViewStyle">@style/Widget.Mersey.WeekDayView</item>
        <item name="monthDayViewStyle">@style/Widget.Mersey.MonthDayView.Circle</item>
        <item name="weekdayViewStyle">@style/Widget.Mersey.WeekdayView</item>

        <item name="timeRangeViewStyle">@style/Widget.Mersey.TimeRangeView</item>
        <item name="weekViewStyle">@style/Widget.Mersey.WeekView</item>
        <item name="monthViewStyle">@style/Widget.Mersey.MonthView</item>
        <item name="weekdaysViewStyle">@style/Widget.Mersey.WeekDaysView</item>

        <item name="buttonStyle">@style/SampleButtonStyle</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark" />

</resources>
