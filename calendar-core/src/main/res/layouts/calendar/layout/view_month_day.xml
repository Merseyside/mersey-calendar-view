<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="model"
            type="com.merseyside.calendar.core.monthView.model.MonthDayViewModel" />
    </data>

    <com.merseyside.calendar.core.monthView.view.MonthDayView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        monthDayModel="@{model}"
        android:onClick="@{ _ -> model.selectState.onSelect()}"
        android:selected="@{model.selectState.selectedObservable.value}"
        isVisible="@{model.visible}" />

</layout>