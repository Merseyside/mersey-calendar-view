<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Mersey.CalendarItemView" parent="android:Widget">
        <item name="dayContentWidth">32dp</item>
        <item name="dayContentHeight">32dp</item>

        <item name="dayTextSize">@dimen/text_size</item>
        <item name="dayTextStyle">bold</item>
        <item name="dayTextColor">@color/day_view_text_default_selector</item>
        <item name="dayBackgroundColor">@color/day_view_background_default_selector</item>

        <item name="dayWeekendTextColor">@color/weekend_day_view_text_default_selector</item>

        <item name="dayCornerRadius">0dp</item>
        <item name="dayContentHorizontalPadding">0dp</item>
        <item name="dayContentVerticalPadding">0dp</item>
    </style>

    <style name="Widget.Mersey.CalendarItemView.Circle" parent="Widget.Mersey.CalendarItemView">
        <item name="dayCropCircle">true</item>
    </style>

    <style name="Widget.Mersey.Day.Number" parent="Widget.Mersey.CalendarItemView" />

    <style name="Widget.Mersey.NumberDayView.Circle" parent="Widget.Mersey.CalendarItemView.Circle" />
    
    <style name="Widget.Mersey.WeekDayView" parent="Widget.Mersey.Day.Number" />

    <style name="Widget.Mersey.MonthDayView" parent="Widget.Mersey.Day.Number">
        <item name="monthOutDayBackgroundColor">@color/month_out_day_view_background_default_selector</item>
        <item name="monthOutDayTextColor">@color/month_out_day_view_text_default_selector</item>
    </style>

    <style name="Widget.Mersey.MonthDayView.Circle" parent="Widget.Mersey.MonthDayView">
        <item name="dayCropCircle">true</item>
    </style>

    <style name="Widget.Mersey.WeekdayView" parent="Widget.Mersey.CalendarItemView">
        <item name="dayContentWidth">0dp</item>
        <item name="dayContentHeight">16dp</item>
        <item name="dayContentHorizontalPadding">0dp</item>
        <item name="dayContentVerticalPadding">0dp</item>
    </style>




    <style name="Widget.Mersey.TimeRangeView" parent="android:Widget"/>

    <style name="Widget.Mersey.SelectableTimeRangeView" parent="Widget.Mersey.TimeRangeView">
        <item name="timeSelectable">false</item>
        <item name="timeCancellableSelection">false</item>
    </style>

    <style name="Widget.Mersey.WeekView" parent="Widget.Mersey.SelectableTimeRangeView"/>

    <style name="Widget.Mersey.NumberWeekDaysWeekView" parent="Widget.Mersey.WeekView">
        <item name="numberWeekDayLength">4</item>
    </style>

    <style name="Widget.Mersey.MonthView" parent="Widget.Mersey.SelectableTimeRangeView">
        <item name="monthShowOutMonthDays">true</item>
    </style>

    <style name="Widget.Mersey.WeekDaysView" parent="Widget.Mersey.TimeRangeView">
        <item name="weekdayLength">2</item>
    </style>


</resources>