<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="DefaultStylesTheme" format="reference">
        <attr name="numberDayViewStyle" format="reference" />
        <attr name="weekDayViewStyle" format="reference" />
        <attr name="monthDayViewStyle" format="reference" />
        <attr name="weekdayViewStyle" format="reference" />

        <attr name="timeRangeViewStyle" format="reference" />
        <attr name="selectableTimeRangeViewStyle" format="reference" />
        <attr name="weekViewStyle" format="reference" />
        <attr name="monthViewStyle" format="reference" />
        <attr name="weekdaysViewStyle" format="reference" />

    </declare-styleable>

    <declare-styleable name="DayItemView">
        <attr name="dayTextSize" format="dimension" />
        <attr name="dayTextColor" format="color" />
        <attr name="dayBackgroundColor" format="color" />

        <attr name="dayWeekendTextColor" format="color" />
        <attr name="dayWeekendBackgroundColor" format="color" />

        <attr name="dayCornerRadius" format="dimension" />

        <attr name="dayContentWidth" format="dimension" />
        <attr name="dayContentHeight" format="dimension" />

        <attr name="dayContentHorizontalPadding" format="dimension" />
        <attr name="dayContentVerticalPadding" format="dimension" />

        <attr name="dayCropCircle" format="boolean" />
    </declare-styleable>

    <declare-styleable name="NumberDayView" parent="DayView">
        <attr name="numberDay" format="integer" />
    </declare-styleable>

    <declare-styleable name="MonthDayView" parent="NumberDayView">
        <attr name="monthIsOutMonthDay" format="boolean"/>
        <attr name="monthPrevDayTextColor" format="color" />
        <attr name="monthPrevDayBackgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="WeekdayView" parent="DayItemView">
        <attr name="weekdayIndex" format="integer" />
    </declare-styleable>

    <declare-styleable name="TimeRangeView" />

    <declare-styleable name="SelectableTimeRangeView" parent="TimeRangeView">
        <attr name="timeSelectable" format="boolean" />
        <attr name="timeCancellableSelection" format="boolean" />
    </declare-styleable>

    <declare-styleable name="WeekView" parent="SelectableTimeRangeView"/>

    <declare-styleable name="MonthView" parent="SelectableTimeRangeView">
        <attr name="monthShowOutMonthDays" format="boolean" />
    </declare-styleable>

    <declare-styleable name="WeekDaysView" parent="TimeRangeView">
        <attr name="weekdayLength" format="integer" />
    </declare-styleable>
</resources>