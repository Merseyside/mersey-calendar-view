<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="model"
            type="com.merseyside.calendar.model.SimpleDayViewModel" />
    </data>


    <com.merseyside.calendar.simpleView.view.SimpleDayView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        dayModel="@{model}"
        android:onClick="@{_ -> model.selectState.onSelect()}"
        android:selected="@{model.selectState.selectedObservable.value}"
        isVisible="@{model.visible}" />

</layout>